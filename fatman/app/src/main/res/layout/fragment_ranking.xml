<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39B8FF"
    tools:context=".fragment.bottomNavigationActivity.rankingFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/btn1"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/dark_blue_round_view_with_shadow"
            android:fontFamily="@font/inter_regular"
            android:text="주간랭킹"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/btn2"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/light_sky_blue_round_view_with_shadow"
            android:fontFamily="@font/inter_regular"
            android:text="누적랭킹"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="18dp"
            android:gravity="center"
            />
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sky_blue_round_view_with_shadow"
        android:padding="20dp"
        />

    <!--<ListView
        android:id="@+id/recyclerview"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/recyclerview_style"
        android:padding="20dp"/>-->



</RelativeLayout>